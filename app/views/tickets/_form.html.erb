
<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :label %>
    <%= f.select :status, Ticket.statuses.keys.map { |value| [value.humanize, value] } %>
    <%= f.select :priority, Ticket.priorities.keys.map { |value| [value.humanize, value]} %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
